{
  "extends": [
    "next/core-web-vitals",
    "prettier",
    "plugin:prettier/recommended"
  ],
  "plugins": [
    "simple-import-sort",
    "prettier",
    "sort-destructure-keys"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "printWidth": 120,
        "tabWidth": 2,
        "singleQuote": true,
        "bracketSpacing": false
      }
    ],
    "react/jsx-sort-props": "error",
    "simple-import-sort/imports": [
      "error",
      {
        "groups": [
          [
            "^react",
            "^next",
            "^@?\\w"
          ],
          [
            "^(@|components)(/.*|$)"
          ]
        ]
      }
    ],
    "sort-destructure-keys/sort-destructure-keys": "error"
  }
}
